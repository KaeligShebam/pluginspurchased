<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{%  block title %}{% block title_base %}Liste des plugins{% endblock %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/logo-to-do-list-vert.ico') }}" />
    {% block stylesheets %}

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/reorder-rows/bootstrap-table-reorder-rows.css" rel="stylesheet">
<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">

        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/root.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/custom.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/motdepasse.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/front/responsive.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top bg-white-shebam mx-auto ">
            <a href="{{ path('home') }}">
                <img class="navbar-img" src="{{ asset('assets/images/logo-to-do-list-hor.png') }}" alt="Logo de la to do list Shebam!">
            </a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    {% if is_granted('ROLE_USER') %}
                        {% if app.request.attributes.get('_route') == 'home' %}
                            <li class="nav-item active"> 
                                {% if is_granted('ROLE_USER') %}
                                {% endif %}
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'plugins'%}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('home') }}">Accueil</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('monthlys_support') }}">Accompagnements Mensuels</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('tickets_shebam_web') }}">Tickets WEB Shebam</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'tickets_shebam_web' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('home') }}">Accueil</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('plugins') }}">Plugins</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('monthlys_support') }}">Accompagnements Mensuels</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'monthlys_support' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('home') }}">Accueil</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('plugins') }}">Plugins</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('tickets_shebam_web') }}">Tickets WEB Shebam</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'modify_monthly_support_front' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('monthlys_support') }}">Retourner aux accompagnements mensuels</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'modify_plugin_front' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('plugins') }}">Retourner aux plugins</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'modify_tickets_shebam_web_front' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('tickets_shebam_web') }}">Retourner aux tickets WEB Shebam</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'account' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('home') }}">Accueil</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('plugins') }}">Plugins</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('monthlys_support') }}">Retourner aux accompagnements mensuels</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('tickets_shebam_web') }}">Tickets WEB Shebam</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'admin' %}
                            <li class="nav-item active"> 
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('home') }}">Accueil</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('plugins') }}">Plugins</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('monthlys_support') }}">Retourner aux accompagnements mensuels</a>
                                <a class="navbar-text color-blue-dark-shebam" href="{{ path('tickets_shebam_web') }}">Tickets WEB Shebam</a>
                            </li>
                        {% endif %}
                    {% endif %}
                {% endif %}
                </ul> 
                <ul class="navbar-nav">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="navbar-text color-blue-dark-shebam" title="Aller sur l'administration" href="{{ path('admin') }}">Administration</a>
                        {% endif %}
                       <a class="navbar-text color-blue-dark-shebam" title="Aller sur mon compte" href="{{ path('account') }}">Compte</a>
                       <a class="navbar-text color-blue-dark-shebam" title="Se déconnecter" href="{{ path('app_logout') }}">Déconnexion</a>
                    {% else %}
                        <a class="navbar-text color-blue-dark-shebam" title="Se connecter" href="{{ path('app_login') }}">Connexion</a>
                        <a class="navbar-text color-blue-dark-shebam" title="S'inscrire" href="{{ path('register') }}">Inscription</a>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <nav class="mobile-bottom-nav">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('admin') }}"><i class="fas fa-tools"></i><br>Admin</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %}
            {% if app.user %}
                {% if is_granted('ROLE_USER') %}
                    <div class="mobile-bottom-nav__item">
                        <div class="mobile-bottom-nav__item-content">
                            <a href="{{ path('account') }}"><i class="fas fa-user-alt"></i><br>Compte</a>
                        </div>		
                    </div>
                {% endif %}
            {% endif %} 
            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="mobile-bottom-nav__item">
                <div class="mobile-bottom-nav__item-content">
                    <a href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i><br>Connexion</a>
                </div>		
            </div>
            <div class="mobile-bottom-nav__item">
                <div class="mobile-bottom-nav__item-content">
                    <a href="{{ path('register') }}"><i class="fas fa-user-plus"></i><br>Inscription</a>
                </div>		
            </div>
            {% endif %}
        </nav>
    </header>

        <div class="container-fluid" style="margin-top: 120px;">
            {% block content %}{% endblock %}
        </div>

{% block javascripts %}

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="{{ asset('assets/js/bootstrap-table.js') }}"></script>
{% endblock %}

</body>
</html>