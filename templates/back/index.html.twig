{% extends '/base.html.twig' %}

{%  block title %}Administration - {% block title_base %}{{ parent() }}{% endblock %}{% endblock %}

{% block content %}

<div class="container-fluid">
    <h2 class="text-center">Bienvenue dans l'administration {{app.user.firstname}}</h2>
    <div class="mb-5"></div>
    <div class="row">
        <div class="col">
            <h3 class="text-center color-blue-dark-shebam mb-3">Liste des plugins</h3>
            <hr>
            <div class="mb-5"></div>
            <table class="table mb-5" data-toggle="true">
                <thead class="bg-grey-shebam color-white-shebam font-weight-bold">
                    <tr>
                        <th scope="col">Nom:</th>
                        <th scope="col">Lien</th>
                        <th scope="col">Date d'achat</th>
                        <th scope="col">Date d'expiration:</th>
                        <th scope="col">Durée</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Client</th>
                        <th scope="col">CMS</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="bg-white-shebam">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN')%}
                        {% for plugin in plugin %}
                        <td>{{plugin.name}}</td>
                        <td><a href="{{plugin.link}}" target="new">Clique moi</a></td>
                        <td>{{plugin.purchaseddate|date('d-m-Y') }}</td>
                        <td>{{plugin.expirationdate|date('d-m-Y') }}</td>
                        <td>{{plugin.duration}}</td>
                        <td>{{plugin.price}}</td>
                        <td>{{plugin.customer}}</td>
                        <td>{{plugin.cms}}</td>
                        <td>
                            <a href="{{ path('modify_plugin_back', {"id": plugin.id, "name": plugin.name}) }}"><i class="fas fa-cog"></i></a>
                             |
                            <a href="{{ path('delete_plugin_front', {"id": plugin.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer une tâche P2')"><i class="fas fa-trash"></i></a>
                        </td>
                        {% endfor %}
                    {% endif %}
                    </tr>
                </tbody>
            </table> 

        </div>
        <div class="col">
            <h3 class="text-center color-blue-dark-shebam mb-3">Liste des utilisateurs</h3>
            <hr>
            <div class="mb-5"></div>	
            <table class="table mb-5" data-toggle="true">
                <thead class="bg-grey-shebam color-white-shebam font-weight-bold">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Rôle</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="bg-white-shebam">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_ADMIN')%}
                        {% for user in user %}
                        <td>{{user.firstname}}</td>
                        <td>{{user.lastname}}</td>
                        <td>{{user.email}}</td>
                        <td>                        
                            {# On boucle sur les rôles #}
                            {% for role in user.roles %}
                                {% if role == "ROLE_USER" %}
                                    Utilisateur
                                {% elseif role == "ROLE_PRO" %}
                                    Entreprise
                                {% elseif role == "ROLE_ADMIN" %}
                                    Administrateur
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            <a href=""><i class="fas fa-cog"></i></a>
                                |
                            <a href="{{ path('delete_user_back', {"id": user.id}) }}" onclick="return confirm('Attention vous vous apprettez à supprimer un utilisateur')"><i class="fas fa-trash"></i></a>
                        </td>
                        {% endfor %}
                    {% endif %}
                    </tr>
                </tbody>
            </table>       
        </div>
    </div>
</div>

{% endblock %}